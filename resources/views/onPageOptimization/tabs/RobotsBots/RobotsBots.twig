{#page start#}
<div class="all-in-one-seo-content">
    <div class="fixed-left">
        {#wrapper start#}
        <div id="wrapper">
            {#include page header#}
            {% include '@CsSeoMegaBundlePack/Global/includes/header.twig' %} 
            {#include page sidebar#}
            {% include '@CsSeoMegaBundlePack/Global/includes/sidebar.twig' %} 
            {#content page start#}
            <div class="content-page">
                {#content div start#}
                <div class="content">
                    {#container div start#}
                    <div class="container">
                        {#page title start#}
                        {% include '@CsSeoMegaBundlePack/Global/includes/title.twig' %} 
                        {#page title end#}
                        <div class="row">
                        <div id="robots_settings" class="col-lg-12">
                        <form id="InternalAddNewRule" action="{{form_action}}" role='form' method='post' class="form-horizontal">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title font-13">
                                    {{panel_subtitle}}
                                </h3>
                            </div>
                            <div class="panel-body">
                                <div class="well">
                                    <strong>{{hints_title}}</strong>
                                    <ol class="m-t-15">
                                        {% for hint in app_create_hints%}
                                            <li>{{hint|raw}}</li>
                                        {% endfor %}
                                    </ol>
                                </div>
                                <div class='form_robots_bots'>
                                    {% set input_keys = '' %}
                                    {% for id, input in inputs %}
                                        {% set new_id = id|replace({'title': 'nofollow'})%}
                                        {% set follow_id = id|replace({'title': 'noindex'})%}
                                        {% set archive = id|replace({'title': 'archive'})%}
                                        {% set noodp = id|replace({'title': 'noodp'})%}
                                        {% set noydir = id|replace({'title': 'noydir'})%}
                                        {% set input_keys = input_keys ~ ',' ~ new_id ~ ',' ~ follow_id ~ ',' ~ archive ~ ',' ~ noodp ~ ',' ~ noydir %} 
                                        <div class="form-group {% if loop.index != count_total %} form-group-border {% endif %}">
                                            <label class="col-sm-3 control-label">{{input.label}}</label>
                                            <div class="col-sm-9">
                                                <div class="col-sm-3">
                                                    <div class="radio radio-custom">
                                                         <input type="radio" name="{{new_id}}" id="{{new_id}}" value="on" {% if attribute(options, new_id) == 'on' %} checked ="checked" {% endif %} />
                                                        <label for="radio2">{{label_follow}}</label>
                                                    </div>
                                                    <div class="radio radio-pink">
                                                         <input type="radio" name="{{new_id}}" id="{{new_id}}" value="off" {% if attribute(options, new_id) == 'off' %} checked ="checked" {% endif %} />
                                                        <label for="radio2">{{label_nofollow}}</label>
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="radio radio-custom">
                                                         <input type="radio" name="{{follow_id}}" id="{{follow_id}}" value="on" {% if attribute(options, follow_id) == 'on' %} checked ="checked" {% endif %} />
                                                        <label for="radio2">{{label_index}}</label>
                                                    </div>
                                                    <div class="radio radio-pink">
                                                         <input type="radio" name="{{follow_id}}" id="{{follow_id}}" value="off" {% if attribute(options, follow_id) == 'off' %} checked ="checked" {% endif %} />
                                                        <label for="radio2">{{label_noindex}}</label>
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="radio radio-custom">
                                                         <input type="radio" name="{{archive}}" id="{{archive}}" value="on" {% if attribute(options, archive) == 'on' %} checked ="checked" {% endif %} />
                                                        <label for="radio2">{{label_archive}}</label>
                                                    </div>
                                                    <div class="radio radio-pink">
                                                         <input type="radio" name="{{archive}}" id="{{archive}}" value="off" {% if attribute(options, archive) == 'off' %} checked ="checked" {% endif %} />
                                                        <label for="radio2">{{label_noarchive}}</label>
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="checkbox checkbox-danger">
                                                         <input type="checkbox" name="{{noodp}}" id="{{noodp}}" value="off" {% if attribute(options, noodp) == 'off' %} checked ="checked" {% endif %} />
                                                        <label for="checkbox2">{{label_noodp}}</label>
                                                    </div>
                                                    <div class="checkbox checkbox-danger">
                                                         <input type="checkbox" name="{{noydir}}" id="{{noydir}}" value="off" {% if attribute(options, noydir) == 'off' %} checked ="checked" {% endif %} />
                                                        <label for="checkbox2">{{label_noydir}}</label>
                                                    </div>
                                                </div>
                                                
                                                <p class="description">{{des_input|replace({'name': input.label})}}</p>
                                            </div>
                                        </div>
                                    {% endfor %}
                                    <input type="hidden" name="inputs" value="{{input_keys}}" />
                                </div>
                                    
                                {#include input fields#}
                            </div>
                            <div class="panel-footer">
                                <input type="hidden" name="_wpnonce" id="_wpnonce" value="{{nonce_field}}"/>
                                <button class="btn btn-purple waves-effect waves-light btn-submit" type="submit">{{label_submit_btn}}</button>
                            </div>
                        </div>
                        </form>
                        </div>
                        </div>
                        {#main content end#}
                    </div> {#container end#}
                </div> {#content end#}
                {#include footer#}
                {% include '@CsSeoMegaBundlePack/Global/includes/footer.twig' %} 
            </div> {#page content end#}
        </div> {#wrapper end#}
    </div>
</div> {#page end#}